@model periodTracker.Models.MenstrualProfile

@{
    ViewData["Title"] = "Create Your Menstrual Profile";
    Layout = "~/Views/Shared/_Layout_Account.cshtml";
}
<br /><br />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title mb-4">Create Your Menstrual Profile</h2>

                    <form asp-action="CreateProfile" method="post">
                        <div class="form-group">
                            <label asp-for="CycleLength">Cycle Length (in days)</label>
                            <input asp-for="CycleLength" class="form-control" />
                            <span asp-validation-for="CycleLength" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PeriodLength">Period Length (in days)</label>
                            <input asp-for="PeriodLength" class="form-control" />
                            <span asp-validation-for="PeriodLength" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Weight">Weight (in kg)</label>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Height">Height (in cm)</label>
                            <input asp-for="Height" class="form-control" />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
