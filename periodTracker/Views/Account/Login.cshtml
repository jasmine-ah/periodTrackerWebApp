
@model periodTracker.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Layout_Dashboard.cshtml";
}
<style>
    .bg-gray-200 {
        background-image: url('/Dashboard/assets/img/login.jpg');
        background-color:transparent;
    }
</style>

<div class="container position-sticky z-index-sticky top-0">
    <div class="row">
        <div class="col-12">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg blur border-radius-xl top-0 z-index-3 shadow position-absolute my-3 py-2 start-0 end-0 mx-4">
                <div class="container-fluid ps-2 pe-0">
                    <a class="navbar-brand font-weight-bolder ms-lg-0 ms-3 ">
                        Period Tracker
                    </a>
                    <button class="navbar-toggler shadow-none ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon mt-2">
                            <span class="navbar-toggler-bar bar1"></span>
                            <span class="navbar-toggler-bar bar2"></span>
                            <span class="navbar-toggler-bar bar3"></span>
                        </span>
                    </button>
                    <div class="collapse navbar-collapse" id="navigation">
                        <ul class="navbar-nav mx-auto">
                        </ul>
                        <ul class="navbar-nav d-lg-flex d-none">
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center me-2 active" asp-area="" asp-controller="Home" asp-action="Index2" aria-current="page">
                                    <i class="fa fa-home opacity-6 text-dark me-1"></i>
                                    Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-2" asp-area="" asp-controller="Account" asp-action="Create">
                                    <i class="fas fa-user-plus opacity-6 text-dark me-1"></i>
                                    Sign Up
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-2" asp-area="" asp-controller="Home" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt opacity-6 text-dark me-1"></i>
                                    Logout
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-2" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    <i class="fas fa-key opacity-6 text-dark me-1"></i>
                                    Privacy
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
        </div>
    </div>
</div>


<main class="main-content  mt-0">
    <div class="page-header align-items-start min-vh-100" style="background-image: url('/Dashboard/assets/img/login.jpg');">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container my-auto">
            <div class="row">
                <div class="col-lg-4 col-md-8 col-12 mx-auto">
                    <div class="card z-index-0 fadeIn3 fadeInBottom">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                                <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Sign in</h4>
                                <div class="row mt-3">
                                    <br />
                                    <br />
                                    <br />
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <form role="form" class="text-start" asp-action="Login" method="post">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="input-group input-group-outline my-3">
                                    <label asp-for="Username" class="form-label">Email</label>
                                    <input asp-for="Username" type="email" class="form-control">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input asp-for="Password" type="password" class="form-control">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-check form-switch d-flex align-items-center mb-3">
                                    <label class="form-check-label mb-0 ms-3" for="rememberMe">
                                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" checked>
                                        @Html.DisplayNameFor(a => a.RememberMe)
                                    </label>
                                </div>
                                <div class="text-center">
                                    <button type="submit" Value="Login" class="btn bg-gradient-primary w-100 my-4 mb-2">Sign in</button>
                                </div>
                                <p class="mt-4 text-sm text-center">
                                    Forgot Password
                                    <a asp-action="ForgotPassword" class="text-primary text-gradient font-weight-bold">Forgot Password</a>
                                </p>
                                <p class="mt-4 text-sm text-center">
                                    Don't have an account?
                                    <a asp-action="Create" class="text-primary text-gradient font-weight-bold">Sign up</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer position-absolute bottom-2 py-2 w-100">
            <div class="container">
                <div class="row align-items-center justify-content-lg-between">
                    <div class="col-12 col-md-6 my-auto">
                        <div class="copyright text-center text-sm text-white text-lg-start">
                            ©
                            <script>document.write(new Date().getFullYear())</script>,
                            <i class="fa fa-heart" aria-hidden="true"></i> by
                            <a class="font-weight-bold text-white" asp-area="" asp-controller="Home" asp-action="Index2" target="_blank">Period Tracker</a>

                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <ul class="nav nav-footer justify-content-center justify-content-lg-end">

                            @*
                                <li class="nav-item">
                                    <a class="nav-link pe-0 text-white" asp-area="" asp-controller="Home" asp-action="Privacy" target="_blank">Privacy</a>
                                </li>
                            *@
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</main>



